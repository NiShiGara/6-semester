{% extends 'base.html.twig' %}

{% block title %}Position index{% endblock %}

{% block body %}
    <h1>Position index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Должность</th>
                <th>действия</th>
            </tr>
        </thead>
        <tbody>
        {% for position in positions %}
            <tr>
                <td>{{ position.id }}</td>
                <td>{{ position.post }}</td>
                <td>
                    <a href="{{ path('app_position_show', {'id': position.id}) }}">show</a>
                    <a href="{{ path('app_position_edit', {'id': position.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_position_new') }}">Создать новую должность</a>
{% endblock %}
